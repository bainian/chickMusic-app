<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaoli.chickmusic">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
        android:name=".app.CMApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">
        <activity android:name=".app.activitys.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".app.activitys.SearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".app.activitys.RankActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
