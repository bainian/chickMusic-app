<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/songImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/defult_music_icon"/>
    <Button
        android:id="@+id/downLoadButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@mipmap/download_icon"/>
    <Button
        android:id="@+id/addToPlayListButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/downLoadButton"
        android:layout_centerVertical="true"
        android:background="@mipmap/add_to_playlist_icon"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/songImage"
        android:layout_toLeftOf="@id/addToPlayListButton"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <com.zhaoli.chickmusic.app.views.MarqueeTextView
            android:id="@+id/songNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="#0FFFFF"
            android:singleLine="true"
            android:focusable="true"
            android:ellipsize="marquee"/>
        <com.zhaoli.chickmusic.app.views.MarqueeTextView
            android:id="@+id/singerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="#0FFFFF"
            android:singleLine="true"
            android:focusable="true"
            android:ellipsize="marquee"/>
    </LinearLayout>
</RelativeLayout>